<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightblue">
            <TextView android:id="@+id/txtTimeEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time Event"/>
            <TableLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6">
                <TableRow>
                    <TextView android:id="@+id/txtNameEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NameEvent"/>
                    <TextView android:id="@+id/txtNameEventValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NameEvent"
                        android:layout_marginLeft="30px"/>
                </TableRow>

                <TableRow android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView android:id="@+id/txtDateStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DateStart"/>
                    <TextView android:id="@+id/txtDateStartValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DateStart"
                        android:layout_marginLeft="30px"/>
                </TableRow>

                <TableRow>
                    <TextView android:id="@+id/txtTimeStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TimeStart"/>
                    <TextView android:id="@+id/txtTimeStartValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TimeStart"
                        android:layout_marginLeft="30px"/>
                </TableRow>
                <TableRow>
                    <TextView android:id="@+id/txtDateEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DateEnd"/>
                    <TextView android:id="@+id/txtDateEndValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DateEnd"
                        android:layout_marginLeft="30px"/>
                </TableRow>
                <TableRow>
                    <TextView android:id="@+id/txtTimeEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TimeEnd"/>
                    <TextView android:id="@+id/txtTimeEndValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TimeEnd"
                        android:layout_marginLeft="30px"/>
                </TableRow>
                <TableRow>
                    <TextView android:id="@+id/txtDecription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Decription"/>
                    <TextView android:id="@+id/txtDecriptionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Decription"
                        android:layout_marginLeft="30px"/>
                </TableRow>
                <TableRow>
                    <TextView android:id="@+id/txtPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place"/>
                    <TextView android:id="@+id/txtPlaceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place"
                        android:layout_marginLeft="30px"/>
                </TableRow>
                <TableRow>
                    <TextView android:id="@+id/txtFriendInvite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FriendInvite"/>
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp">
                        <TableRow android:layout_height="wrap_content"
                            android:layout_width="wrap_content">
                            <TextView
                                android:layout_width="601px"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtFriendInviteValue" />
                        </TableRow>
                        <TableRow>
                            <Button android:layout_width="10px"
                                android:layout_height="wrap_content"
                                android:text=":::"
                                android:id="@+id/btngallery" />
                        </TableRow>
                    </TableLayout>

                </TableRow>
                <TableRow>
                    <TextView android:id="@+id/txtAlarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm"/>
                    <TextView android:id="@+id/txtAlarmValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm"
                        android:layout_marginLeft="30px"/>
                </TableRow>
                <TableRow>
                    <TextView android:id="@+id/txtRepeat"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Repeat"/>
                    <TextView android:id="@+id/txtRepeatValue"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Repeat"
                        android:layout_marginLeft="30px"/>
                </TableRow>
            </TableLayout>
        </TableRow>
        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/item_press">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>
