<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Event's Name"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
        <EditText
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/edtEventName"
            android:fontFamily="sans-serif-medium"
            android:textSize="55px"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:text="Set Time"
            android:fontFamily="sans-serif-medium"
            android:textStyle="italic|bold"
            android:textSize="70px"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="From"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
        <TextView
            android:id="@+id/txtSetDayFrom"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
        <Button
            android:text="..."
            android:id="@+id/btnSetDayFrom"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>
        <TextView
            android:id="@+id/txtSetTimeFrom"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
       <Button
           android:text="..."
           android:id="@+id/btnsetTimeFrom"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:layout_width="0dp"
           android:fontFamily="sans-serif-medium"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="To"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
        <TextView
            android:id="@+id/txtSetDayTo"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="55px"/>
        <Button
            android:text="..."
            android:id="@+id/btnSetDayTo"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:id="@+id/txtSetTimeTo"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
        <Button
            android:text="..."
            android:id="@+id/btnsetTimeTo"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Detail"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
        <EditText
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:lineSpacingMultiplier="5"
            android:id="@+id/edtDescription"
            android:fontFamily="sans-serif-medium"
            android:textSize="55px"/>
        <TextView
            android:text=""
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Place"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
        <AutoCompleteTextView
            android:id="@+id/actAdress"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="55px"/>
        <Button
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Map"
            android:id="@+id/btnshowmap"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Add Friend"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
        <MultiAutoCompleteTextView
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:inputType="textMultiLine|textEmailAddress"
            android:id="@+id/actaddfriend"
            android:fontFamily="sans-serif-medium"
            android:textSize="55px"/>
        <Button
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="..."
            android:id="@+id/btnfindfriend"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Alarm"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
        <EditText
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/edtAlarm"
            android:hint="0"
            android:fontFamily="sans-serif-medium"
            android:textSize="55px"/>
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/txtMinute"
            android:text="minute"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Repeat"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="60px"/>
        <Spinner
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/spnRepeat"
            android:textSize="55px"/>

    </TableRow>
</TableLayout>