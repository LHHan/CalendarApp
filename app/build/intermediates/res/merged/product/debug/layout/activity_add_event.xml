<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_add_event_tv_event_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Event's Name"
            android:textSize="60px" />

        <EditText
            android:id="@+id/activity_add_event_et_event_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-medium"
            android:textSize="55px" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="sans-serif-medium"
            android:text="Set Time"
            android:textSize="70px"
            android:textStyle="italic|bold" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-medium"
            android:text="From"
            android:textSize="60px" />

        <TextView
            android:id="@+id/activity_add_event_tv_set_day_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px" />

        <Button
            android:id="@+id/activity_add_event_btn_set_day_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="..." />

        <TextView
            android:id="@+id/activity_add_event_tv_set_time_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px" />

        <Button
            android:id="@+id/activity_add_event_btn_set_time_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="..." />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-medium"
            android:text="To"
            android:textSize="60px" />

        <TextView
            android:id="@+id/activity_add_event_tv_set_day_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif-medium"
            android:textSize="55px" />

        <Button
            android:id="@+id/activity_add_event_btn_set_day_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="..." />

        <TextView
            android:id="@+id/activity_add_event_tv_set_time_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="sans-serif-medium"
            android:textSize="60px" />

        <Button
            android:id="@+id/activity_add_event_btn_set_time_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="..." />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/activity_add_event_tv_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Detail"
            android:textSize="60px" />

        <EditText
            android:id="@+id/activity_add_event_et_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingMultiplier="5"
            android:textSize="55px" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/activity_add_event_tv_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Place"
            android:textSize="60px" />

        <AutoCompleteTextView
            android:id="@+id/activity_add_event_actv_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="sans-serif-medium"
            android:textSize="55px" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/activity_add_event_tv_add_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-medium"
            android:text="Add Friend"
            android:textSize="60px" />

        <MultiAutoCompleteTextView
            android:id="@+id/activity_add_event_mactv_add_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="sans-serif-medium"
            android:inputType="textMultiLine|textEmailAddress"
            android:textSize="55px" />

        <Button
            android:id="@+id/activity_add_event_btn_find_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="..." />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/activity_add_event_tv_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Alarm"
            android:textSize="60px" />

        <EditText
            android:id="@+id/activity_add_event_et_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:fontFamily="sans-serif-medium"
            android:hint="0"
            android:textSize="55px" />

        <TextView
            android:id="@+id/activity_add_event_tv_minute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="minute"
            android:textSize="60px" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Repeat"
            android:textSize="60px" />

        <Spinner
            android:id="@+id/activity_add_event_spn_repeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="55px" />

    </TableRow>
</TableLayout>