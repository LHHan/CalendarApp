<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_item_press" />

    <TextView
        android:id="@+id/cardview_recycler_my_friend_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Name"
        android:textSize="60px" />

    <TextView
        android:id="@+id/cardview_recycler_my_friend_tv_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_recycler_my_friend_tv_name"
        android:fontFamily="sans-serif-medium"
        android:text="@string/mail"
        android:textSize="60px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_item_press" />
</RelativeLayout>