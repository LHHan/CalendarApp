<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightblue">

            <TextView
                android:id="@+id/cardview_recycler_new_event_tv_time_event"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time Event" />

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6">

                <TableRow>

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_name_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NameEvent" />

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_name_event_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="NameEvent" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_date_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DateStart" />

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_date_start_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="DateStart" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TimeStart" />

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_time_start_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="TimeStart" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_date_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DateEnd" />

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_date_end_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="DateEnd" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TimeEnd" />

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_time_end_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="TimeEnd" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_decription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Decription" />

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_decription_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="Decription" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place" />

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_place_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="Place" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/txtFriendInvite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FriendInvite" />

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/cardview_recycler_new_event_tv_friend_invite_value"
                                android:layout_width="601px"
                                android:layout_height="wrap_content" />
                        </TableRow>

                        <TableRow>

                            <Button
                                android:id="@+id/cardview_recycler_new_event_btn_gallery"
                                android:layout_width="10px"
                                android:layout_height="wrap_content"
                                android:text=":::" />
                        </TableRow>
                    </TableLayout>

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm" />

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_alarm_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="Alarm" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_repeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Repeat" />

                    <TextView
                        android:id="@+id/cardview_recycler_new_event_tv_repeat_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="Repeat" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <Button
                    android:id="@+id/cardview_recycler_new_event_btn_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agree" />

                <Button
                    android:id="@+id/cardview_recycler_new_event_btn_refuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refuse" />
            </TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/item_press">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
