<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/lightblue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="12px"
        android:paddingRight="10px"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtNameEvent"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Name's Event"
                android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/txtNameEventValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NameEvent"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtDateStart"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="DateStart"
                android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/txtDateStartValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DateStart"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtTimeStart"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="TimeStart"
                android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/txtTimeStartValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TimeStart"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtDateEnd"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="DateEnd"
                android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/txtDateEndValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DateEnd"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtTimeEnd"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="TimeEnd"
                android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/txtTimeEndValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TimeEnd"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtDecription"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Decription"
                android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/txtDecriptionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decription"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtPlace"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Place"
                android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/txtPlaceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtFriendInvite"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="FriendInvite"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:layout_width="500px"
                android:layout_height="fill_parent"
                android:id="@+id/txtFriendInviteValue"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
            <Button android:layout_width="150px"
                android:layout_height="wrap_content"
                android:text=":::"
                android:id="@+id/btngallery"
                android:layout_marginLeft="70dp"/>
        </LinearLayout>
        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtAlarm"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Alarm"
                android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/txtAlarmValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtRepeat"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Repeat"
                android:fontFamily="sans-serif-medium"/>
            <TextView android:id="@+id/txtRepeatValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat"
                android:layout_marginLeft="50dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtComment"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:fontFamily="sans-serif-medium"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnComment"
                android:text="Comment"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <LinearLayout  android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView android:id="@+id/txtPic"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Picture"
                android:fontFamily="sans-serif-medium"/>

            <Button android:id="@+id/btnPic"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Picture"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>