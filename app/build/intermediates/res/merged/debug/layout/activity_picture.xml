<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="5px"
        android:paddingBottom="15px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center">
            <ImageView
                android:layout_width="500px"
                android:layout_height="500px"
                android:gravity="center"
                android:id="@+id/imgPicture"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lvCommentPicture"></ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.rockerhieu.emojicon.EmojiconEditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="9"
                android:id="@+id/edtCommentPicture"/>
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:layout_height="140px"
                android:layout_weight="1"
                android:id="@+id/btnEmojiPicture"
                android:background="@drawable/emoji_love"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/btnSendCommentPicture"
                android:text="Send"/>
            <FrameLayout
                android:id="@+id/emojiconsPicture"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>